<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/radio_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When selected, set a blue background -->
    <item android:state_checked="true" android:drawable="@drawable/radio_button_selected" />
    <!-- When not selected, set the default border -->
    <item android:drawable="@drawable/radio_button_default" />
</selector>
